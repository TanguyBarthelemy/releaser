linters: lintr::all_linters(
        indentation_linter(indent = 4L),
        lintr::line_length_linter(80L),
        return_linter = NULL,
        nonportable_path_linter = NULL,
        function_argument_linter = NULL
    )
encoding: "UTF-8"
exclusions: list(
    "tests" = list(
        undesirable_operator_linter = Inf,
        line_length_linter = Inf,
        commented_code_linter = Inf
    )
  )
